# ACI Dashboard Production Environment Configuration
# Security-hardened settings for production deployment

# Application Environment
ENVIRONMENT=production
DEBUG=false
NODE_ENV=production

# Security Keys (In production, these should be properly generated and managed)
SECRET_KEY=ACI-Dashboard-Production-Secret-Key-2025-Secure-32-Characters-Long
JWT_SECRET_KEY=ACI-JWT-Production-Secret-Key-For-Access-Tokens-32-Characters-Long
JWT_REFRESH_SECRET_KEY=ACI-JWT-Refresh-Production-Secret-Key-Different-From-Access-32
ENCRYPTION_KEY=ACI-Production-Encryption-Key-32-Characters-Long-Secure-2025

# Database Configuration - Production Secure
POSTGRES_PASSWORD=ACI-Prod-DB-Password-Secure-2025-Complex-32-Characters-Long
DATABASE_URL=postgresql://postgres:ACI-Prod-DB-Password-Secure-2025-Complex-32-Characters-Long@db:5432/aci_dashboard

# Redis Configuration - Production Secure
REDIS_PASSWORD=ACI-Prod-Redis-Password-Secure-2025-Complex-32-Characters-Long
REDIS_URL=redis://:ACI-Prod-Redis-Password-Secure-2025-Complex-32-Characters-Long@redis:6379/0

# Network Configuration - Production
ALLOWED_ORIGINS=http://localhost:2004,http://127.0.0.1:2004,http://localhost:2005,http://127.0.0.1:2005
FRONTEND_URL=http://localhost:2004
ALLOWED_HOSTS=localhost,127.0.0.1,*.americancircuits.com
NEXT_PUBLIC_API_URL=http://localhost:2003

# Security Settings - Enhanced for Production
BCRYPT_ROUNDS=14
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=5

# Rate Limiting - High Traffic Values (50-100 users)
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=60

# Session Security - High Traffic
SESSION_TIMEOUT=30
MAX_CONCURRENT_SESSIONS=150

# Password Policy - Production Strict
PASSWORD_MIN_LENGTH=14
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_ATTEMPTS=3
PASSWORD_LOCKOUT_DURATION=30

# Monitoring - Enabled for Production
ENABLE_METRICS=true
METRICS_PORT=9090

# Timezone
TZ=UTC

# NextJS Telemetry
NEXT_TELEMETRY_DISABLED=1